{
  "manifest_version": 3,
  "name": "Network Navigator",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting", "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["linkedin-content.js"],
      "run_at": "document_end" 
    },
    {
      "matches": ["https://www.imdb.com/*"],
      "js": ["imdb-content.js"],
      "run_at": "document_end" 
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },"side_panel": {
    "default_path": "side_panel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
